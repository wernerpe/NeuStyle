{
    // Automatically format using Black on save.
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    // Draw a ruler at Black's column width.
    "editor.rulers": [
        88,
    ],
    // Hide non-code files.
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        "**/venv": true,
    },
}